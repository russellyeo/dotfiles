[user]
	name = Russell Yeo
	email = rusyeo@gmail.com
[credential]
	helper = osxkeychain
[core]
	pager = delta
	editor = code --wait
	excludesfile = ~/.gitignore_global
	compression = 1
	packedGitLimit = 512m
  	packedGitWindowSize = 512m
[pack] 
  deltaCacheSize = 2047m
  packSizeLimit = 2047m 
  windowMemory = 2047m
[init]
	defaultBranch = main
[interactive]
  	diffFilter = delta --color-only --detect-dark-light always
[delta]
  	navigate = true # use n and N to move between diff sections
	side-by-side = true
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
[alias]
	# Edit the git machete file
  	me = machete edit
	# List the current branch structure
  	ms = machete status --list-commits
	# Run machete traverse
  	mt = machete traverse
	# Create a pull request
	create-pr = !~/.dotfiles/scripts/ios-create-pr.sh
	# Create a draft pull request
	create-draft-pr = !~/.dotfiles/scripts/ios-create-draft-pr.sh
# Override gitconfig for Depop repositories
[includeIf "gitdir:~/Developer/Depop/**"]
	path = ~/.dotfiles/.gitconfig_depop
[mergetool]
	keepBackup = false
